@using AppFacturacionMVC.Areas.Catalogos.Models
@model List<Cliente>

@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />


<div class="col-lg-12 container ">
    <div class="row col-md-12">
        <div class="col-md-2"></div>
        <form class="form-horizontal">
            <div class="col-md-8 contenedor ">
                
                <div class="col-md-12 container-fluid sin-padding paddin-up">
                    <h1 class="h1 badge center-block titulo">Facturación de Productos</h1>
                    <div class="panel panel-primary ">
                        <div class="panel-heading"><h4>Ingreso de datos</h4></div>
                        <div class="panel-body">
                            <div class="col-md-5">
                                <div class="form-group control">
                                    <label for="nFactura">Numero Factura</label>
                                    <input class="form-control" id="NumeroFactura" disabled value="@ViewBag.NumeroFactura" />
                                </div>
                                @Html.Action("BuscarCliente", "Home", new { area = "" })

                            </div>
                            <div class="col-md-1"></div>
                            <div class="col-md-5">
                                <div class="form-group control">
                                    <label for="fecha">Fecha</label>
                                    <div class="input-group date" id='datetimepicker1'>
                                        <input type="text" id="pick" class="form-control datepicker" />
                                        <span id="cal" class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group control">
                                    <label for="formaPago">Forma Pago</label>
                                    <select class="form-control " id="formaPago">
                                        <option value="Contado">Contado</option>
                                        <option value="Credito">Credito</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <input type="button" id="facturar" class="form-control btn-danger sin-padding" value="Facturar" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12 container-fluid sin-padding paddin-up">
                    <div class="panel panel-primary">
                        <div class="panel-heading"><h4>Datos del producto</h4></div>
                        <div class="row panel-body">

                            <div class="col-md-6">
                                @Html.Action("BuscarProducto", "Home", new { area = "" })
                            </div>
                            <div class="col-md-2 sin-padding">
                                <input type="text" id="cantidad" class="form-control" placeholder="Cantidad" />
                            </div>
                            <div class="col-md-2 ">
                                <input type="text" id="precio" class="form-control precio" disabled placeholder="Precio" />
                            </div>
                            <div class="col-md-2 ">
                                <input type="button" id="agregar" class="form-control btn-primary sin-padding" value="Agregar" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 container-fluid sin-padding">
                    <div class="panel panel-primary">
                        <div class="panel-heading"><h4>Carrito de compra</h4></div>
                        <div class="row panel-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Producto</th>
                                        <th scope="col">Cantidad</th>
                                        <th scope="col">Total($)</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer col-md-12 total">
                    <p id="totalFactura"></p>
                </div>


            </div>
    </form>
        <div class="col-md-2"></div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/FuncionesJS.js"></script>
}